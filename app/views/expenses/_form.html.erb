<%= render 'shared/form_error', error_object: @expense %>
<%= form_for [@user, @expense],
             html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Expense', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :amount, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :frequency_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select(:frequency_id, Frequency.all, :id, :name, {}, { class: 'form-control'}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.collection_select(:category_id, @user.categories, :id, :name, {}, { class: 'form-control'}) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit @expense.id ? 'Edit Expense' : 'Add Expense', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
