<div class='col-xs-12'>
  <h2>Login to BudgetStart</h2>
</div>
<div class='col-xs-12'>
  <%= form_tag '/login', method: 'post', class: 'form-inline' do %>
    <div class="form-group">
      <%= label_tag 'email', nil, class: 'sr-only' %>
      <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group">
      <%= label_tag 'password', nil, class: 'sr-only' %>
      <%= password_field_tag 'password', nil, class: 'form-control', placeholder: 'Password' %>
    </div>
    <%= submit_tag 'login', class: 'btn btn-success' %>
  <% end %>
</div>
